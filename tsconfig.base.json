{
  "compilerOptions": {
    "composite": true,
    "allowJs": false,
    "lib": ["es2015", "es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "pretty": true,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "declaration": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "src/@types",
      "../../node_modules/@types",
      "node_modules/@types"
    ]
  },
  "compileOnSave": false
}
