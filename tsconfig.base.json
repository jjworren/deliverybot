{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "allowJs": false,
    "lib": [
      "es2015",
      "es2017",
      "es2018",
      "es2019.array",
      "es2019.object",
      "dom",
      "dom.iterable"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "pretty": true,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "declaration": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "src/@types",
      "../../node_modules/@types",
      "node_modules/@types"
    ],
    "paths": {
      "@deploybot/*": ["packages/*/src"]
    }
  },
  "exclude": ["node_modules"],
  "compileOnSave": false
}
